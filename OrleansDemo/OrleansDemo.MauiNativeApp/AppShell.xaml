<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OrleansDemo.MauiNativeApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OrleansDemo.MauiNativeApp"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Index">
            <ShellContent ContentTemplate="{DataTemplate local:Index}"></ShellContent>
        </Tab>
        <Tab Title="Chat">
            <ShellContent ContentTemplate="{DataTemplate local:Chat}"></ShellContent>
        </Tab>
        <Tab Title="History">
            <ShellContent ContentTemplate="{DataTemplate local:History}"></ShellContent>
        </Tab>
    </TabBar>

</Shell>
